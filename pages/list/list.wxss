/* pages/list/list.wxss */
.wrap{
  height: 100%;
  display: flex;
  flex-direction: column;
  padding:20rpx
}
navigator{
  overflow: hidden;
  display: center;
  align-content: center;
}
.navigator-hover {
background-color:rgba(0, 0, 0, 0.1);
opacity:0.7;
margin-top:50rpx;
}

.list{
  margin-bottom: 100rpx;
  height: 200rpx;
  position: relative;  
}

.imgs{float: left}
.imgs image{
  display: block;
  width:200rpx;
  height:200rpx;
  margin-left:20rpx;
  margin-right:40rpx;
}
.infos{
  float: left;
  width: 480rpx;
  height:200rpx;
  padding:20rpx 0 0 20 rpx;
  
}
.title{
  font-size: 25px;
  margin-top:10%;
}
.date{
  font-size: 16px;
  color:#aaa;
  position: absolute;
  bottom:10%;
}
