/* pages/caseHistory/caseHistory.wxss */

.con_rignt {
  position: relative;
  left: 5%;
  width: 90%;
}

.con_rignt .cureCur {
  position: relative;
  top: 20px;
  width: 100%;
  min-height: 200px;
}

.con_rignt .cureCur .firstCure {
  background-color: cornflowerblue;
  color: whitesmoke;
  height: 300rpx;
  border-radius: 20px;
  padding-bottom: 3px;
  padding-right: 9px;
  display: flex;
  justify-content: center;
  font-size: 150rpx;
}

.con_rignt .cureCur .text {
  position: relative;
  min-height: 50px;
  margin-left: 15px;
  margin-top: 7px;
  color: whitesmoke;
  line-height: 20px;
  font-size: 40rpx;
}

.con_rignt .cureCur .text view {
  display: inline-block;
}

.con_rignt .cureCur .text view:first-of-type {
  font-size: 25px;
  font-weight: bold;
  margin-top: 10%;
  margin-bottom: 5%;
}

.con_rignt .cureCur .text .textarea {
  width: 100%;
  height: auto;
  outline: none;
}

.con_rignt .cureCur .examine {
  margin-top: 3px;
  margin-bottom: 13px;
}

.con_rignt .cureCur .examine view {
  display: inline-block;
  box-sizing: border-box;
  width: 46%;
  margin-top: 6px;
  padding: 3px 10px;
  line-height: 20px;
  border: #222 1px solid;
  border-radius: 10px;
}

.con_rignt .cureCur .examine view:nth-child(even) {
  float: right;
}

.con_rignt .cureCur  .finalDiagnosis {
  background-color: cornflowerblue;
  color: whitesmoke;
  border-radius: 15px;
  margin-left: 0px;
  min-height: 50px;
  padding: 5px 6px;
  height: 200rpx;
}

.con_rignt .cureCur .medicine .medicine_item view {
  display: inline-block;
}

.con_rignt .cureCur .medicine {
  margin-top: 10px;
}

.con_rignt .cureCur .medicine .medicine_text {
  font-size: 20px;
  font-weight: bold;
}

.con_rignt .cureCur .medicine .medicine_item {
  margin-top: 10px;
  margin-left: 20px;
}

.con_rignt .cureCur .medicine .medicine_item .medicine_time {
  position: absolute;
  right: 0px;
}

.con_rignt .cureCur .medicine .medicine_item .medicine_num {
  position: absolute;
  right: 30%;
}

.cureHis {
  margin-left: 5px;
  margin-top: 45px;
  border-top: #ccc 1px solid;
}

.cureHis  .cureHisText {
  font-weight: bold;
  font-size: 22px;
  margin-bottom: 15px;
  margin-top: 18px;
}

.cureHis .cureItem {
  background-color: cornflowerblue;
  color: whitesmoke;
  width: 100%;
  height: 35px;
  border-radius: 12px;
  margin-bottom: 10px;
  padding-top: 1px;
  font-size: 50rpx;
  line-height: 40rpx;
  font-weight: bold;
}

.cureHis .cureItem view {
  display: inline-block;
  font-size: 12px;
  color: whitesmoke;
  line-height: 20px;
}

.cureHis .cureItem .diseaseName {
  margin-left: 10px;
}

.cureHis .cureItem .diseaseTime {
  position: relative;
  left: 27px;
}

.cureHis .cureItem .hospital {
  float: right;
  margin-right: 9px;
}
