/* pages/list/list.wxss */

.wrap {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

navigator {
  overflow: hidden;
}

.list {
  margin-bottom: 20rpx;
  height: 350rpx;
  position: relative;
  margin-left: 50rpx;
}

.imgs {
  float: left;
  margin-top: 50rpx;
  margin-right: 50rpx;
}

.imgs image {
  display: block;
  width: 200rpx;
  height: 200rpx;
}

.infos {
  float: left;
  height: 200rpx;
  padding: 20rpx 0 0 20 rpx;
  margin-top: 20rpx;
}

.title {
  font-size: 25px;
  margin-bottom: 10%;
  color: cornflowerblue;
}

.titleid {
  margin-top: 20%;
  color: cornflowerblue;
  margin-bottom: 0;
}

.date {
  font-size: 16px;
  color: #aaa;
  position: absolute;
  bottom: 10%;
}
