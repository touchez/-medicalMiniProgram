/* pages/list/list.wxss */
.cont{
  color:dimgray;
}
.haveb {
  border-bottom: 1rpx solid #aaa;
  border-bottom-width: 80%;
  margin-left: 10%;
}

.wrap {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

navigator {
  overflow: hidden;
}

.list {
  margin-bottom: 20rpx;
  height: 200rpx;
  position: relative;
}

.imgs {
  float: left;
}

.imgs image {
  display: block;
  width: 200rpx;
  height: 200rpx;
}

.infos {
  float: left;
  width: 480rpx;
  height: 200rpx;
  padding: 20rpx 0 0 20 rpx;
}

.front {
  color: cornflowerblue;
  margin-right: 20rpx;
}

.title {
  font-size: 20px;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: whitesmoke;
  background-color: cornflowerblue;
  border-radius: 20rpx;
  width: 80%;
  margin-left: 10%;
}

.titlev {
  font-size: 20px;
  margin: 40rpx 0 40rpx 50rpx;
  white-space: nowrap;
  display: flex;
}

.date {
  font-size: 16px;
  color: #aaa;
  position: absolute;
  bottom: 0;
}
